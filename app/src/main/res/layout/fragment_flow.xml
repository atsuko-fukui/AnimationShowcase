<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flexbox_flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:constraint_referenced_ids="text_1,text_2,text_3,text_4,text_5"
        app:flow_wrapMode="chain"
        app:flow_horizontalStyle="packed"
        app:flow_verticalStyle="packed"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:flow_horizontalBias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/grid_flow"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/grid_flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:constraint_referenced_ids="number_1,number_2,number_3,number_4,number_5,number_6,number_7,number_8,number_9"
        app:flow_wrapMode="aligned"
        app:flow_maxElementsWrap="3"
        app:flow_horizontalGap="4dp"
        app:flow_verticalGap="4dp"
        app:layout_constraintTop_toBottomOf="@id/flexbox_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/text_1"
        style="@style/FlowFlexBoxItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January February"
        />
    <TextView
        android:id="@+id/text_2"
        style="@style/FlowFlexBoxItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March April"
        />
    <TextView
        android:id="@+id/text_3"
        style="@style/FlowFlexBoxItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May Jun"
        />
    <TextView
        android:id="@+id/text_4"
        style="@style/FlowFlexBoxItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="July August"
        />
    <TextView
        android:id="@+id/text_5"
        style="@style/FlowFlexBoxItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="September October November"
        />
    <TextView
        android:id="@+id/number_1"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        />
    <TextView
        android:id="@+id/number_2"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        />
    <TextView
        android:id="@+id/number_3"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        />
    <TextView
        android:id="@+id/number_4"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        />
    <TextView
        android:id="@+id/number_5"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        />
    <TextView
        android:id="@+id/number_6"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        />
    <TextView
        android:id="@+id/number_7"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        />
    <TextView
        android:id="@+id/number_8"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        />
    <TextView
        android:id="@+id/number_9"
        style="@style/FlowFlexBoxGridStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        />
</androidx.constraintlayout.widget.ConstraintLayout>